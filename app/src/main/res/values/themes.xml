<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FastApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_900</item>
        <item name="colorPrimaryVariant">@color/md_teal_700</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_200</item>
        <item name="colorSecondaryVariant">@color/md_teal_700</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FastApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FastAppCardView" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item> <!-- Replace with desired background color -->
        <item name="contentPadding">2dp</item> <!-- Adjust padding as per your design -->
    </style>

    <style name="LabelTextViewStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#869299</item> <!-- Replace with your desired text color -->
        <item name="android:textSize">16sp</item> <!-- Replace with your desired text size -->
        <!-- Add more style attributes as per your requirements -->
    </style>


    <style name="Theme.FastApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FastApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>